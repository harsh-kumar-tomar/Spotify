<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    tools:context=".Activities.login_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="What's your email ?"
            android:textColor="#fff"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="62dp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:paddingStart="20dp"
            android:background="@drawable/background4"
            android:ems="10"
            android:maxLines="1"
            android:fontFamily="@font/avenir_next_font_bold"
            android:hint="your_email@gmail.com"
            android:inputType="textEmailAddress"
            android:textColor="#fff"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="143dp" />

        <TextView
            android:id="@+id/textcefView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="What's your Password ?"
            android:textColor="#fff"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="62dp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:paddingStart="20dp"
            android:background="@drawable/background4"
            android:ems="10"
            android:maxLines="1"
            android:fontFamily="@font/avenir_next_font_bold"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#fff"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="143dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="Forgot Password ?"
            android:textColor="#fff"
            android:textSize="8dp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="278dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_btn"
            android:layout_width="82dp"

            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:layout_gravity="center_horizontal"



            android:background="@drawable/green_background"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="Log In"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
