<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    tools:context=".Fragments.enter_name">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="What's your name ?"
            android:textColor="#fff"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="69dp"
            tools:layout_editor_absoluteY="62dp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:paddingStart="20dp"
            android:background="@drawable/background4"
            android:ems="10"
            android:maxLines="1"
            android:fontFamily="@font/avenir_next_font_bold"
            android:hint="Harsh Kumar Tomar"
            android:inputType="textEmailAddress"
            android:textColor="#fff"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="143dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="This appears on your spotify profile"
            android:textColor="#fff"
            android:textSize="8dp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="278dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="57dp"
            >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="By tapping on “Create account”, you agree to the spotify Terms of Use."
            android:textColor="#fff"
            android:textSize="10dp"
            android:lineSpacingExtra="5dp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="278dp" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="Terms of Use"
            android:textColor="#1ED760"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="278dp" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="To learn more about how Spotify collect, uses, shares and protects your personal data, Please see the Spotify Privacy Policy."
            android:textColor="#fff"
            android:textSize="10dp"
            android:lineSpacingExtra="5dp"

            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="278dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="Privacy Policy"
            android:textColor="#1ED760"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="278dp" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="Please send me news and offers from Spotify."
            android:textColor="#fff"
            android:textSize="10dp"
            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="278dp" />
        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="Share my registration data with Spotify’s content providers for marketing purposes."
            android:textColor="#fff"
            android:textSize="10dp"
            android:lineSpacingExtra="5dp"

            tools:layout_editor_absoluteX="93dp"
            tools:layout_editor_absoluteY="278dp" />


            </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_btn"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"

           android:padding="10dp"


            android:layout_gravity="center_horizontal"



            android:background="@drawable/background2"
            android:fontFamily="@font/avenir_next_font_bold"
            android:text="Create an account"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
